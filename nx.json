{
  "extends": "nx/presets/npm.json",
  "targetDefaults": {
    "update-bin": {
      "dependsOn": [
        "^update-bin"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "release": {
      "dependsOn": [
        "^update-bin"
      ]
    }
  },
  "defaultBase": "main",
  "release": {
    "projects": [
      "packages/*"
    ],
    "version": {
      "conventionalCommits": true
    },
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    }
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"npx projen\"."
}
